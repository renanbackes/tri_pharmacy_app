<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/TriSoccer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/tri_pharmacy_logo"
        android:text="Tri Soccer"
        android:textColor="#00FF00" />

    <EditText
        android:id="@+id/LogDiUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:width="200dp"
        android:ems="10"
        android:hint="Usuario:"
        android:inputType="textPersonName"
        android:layoutDirection="inherit"
        android:orientation="horizontal"
        android:textColorHint="#008F00"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/logdiSen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:width="200dp"
        android:ems="10"
        android:hint="Senha:"
        android:inputType="textPersonName|textPassword"
        android:orientation="horizontal"
        android:textColorHint="#007F00"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="5dp"
        android:text="Entrar"
        android:textColor="#008F00" />


</LinearLayout>